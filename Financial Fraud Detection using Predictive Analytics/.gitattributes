# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# R files
*.R text eol=lf
*.r text eol=lf

# Notebooks
*.ipynb text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# CSV files (if you want to track them)
*.csv text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.pkl binary
*.pickle binary
*.joblib binary

